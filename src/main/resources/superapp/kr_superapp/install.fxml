<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.DirectoryChooser?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="superapp.kr_superapp.InstallController">
    <children>
        <Label text="Welcome to SuperApp Installation" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <Label text="Please select the installation directory:" />
        <TextField fx:id="directoryField" promptText="Installation directory" />
        <Button text="Browse" onAction="#handleBrowse" />
        <Button text="Install" onAction="#handleInstall" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        <Label fx:id="statusLabel" text="" style="-fx-text-fill: red;" />
    </children>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
</VBox>
